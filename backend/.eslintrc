{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "test/**/*.spec.js"
    ],
    "rules": {
        "semi": "error",
        "quotes": ["error", "single"],
        "indent": ["error", 2],
        "@typescript-eslint/explicit-module-boundary-types": "off"
    }
}