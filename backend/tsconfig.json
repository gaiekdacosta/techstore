{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "lib": ["es2021"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
        "*": ["src/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}